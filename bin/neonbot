#/bin/bash

CONTAINER_NAME="neonbot-app-1"

cd $(dirname "$0")/../

case "$1" in
  "restart")
    docker restart $CONTAINER_NAME
    ;;
  "logs")
    docker logs $CONTAINER_NAME -f
    ;;
  "update")
    git pull
    ;;
  "upgrade")
    docker exec -it $CONTAINER_NAME "pipenv update"
    ;;
  "rebuild")
    docker compose up -d --build
    ;;
  *)
    echo "Invalid arguments. (restart|logs|update)"
    exit 1
    ;;
esac